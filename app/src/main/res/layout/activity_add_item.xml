<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddItemActivity">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="none"
      tools:layout_editor_absoluteX="-75dp"
      tools:layout_editor_absoluteY="-41dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <ImageButton
          android:id="@+id/backButton"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_marginStart="8dp"
          android:layout_marginTop="16dp"
          android:background="@android:color/transparent"
          android:scaleType="centerCrop"
          android:src="@drawable/arrow_left"
          tools:ignore="MissingConstraints" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif-condensed-medium"
          android:text="Add Item"
          android:textColor="@color/black"
          android:textSize="40sp"
          tools:ignore="MissingConstraints"
          tools:layout_editor_absoluteX="97dp"
          tools:layout_editor_absoluteY="-3dp" />

      <EditText
          android:layout_width="0dp"
          android:layout_height="57dp"
          android:hint="Enter Food Name"
          android:layout_marginStart="8dp"
          android:layout_marginTop="24dp"
          android:layout_marginEnd="8dp"
          android:background="@drawable/edittextshape"
          android:paddingLeft="15dp"
          android:elevation="5dp"
          android:textSize="20sp"
          android:fontFamily="sans-serif-condensed-medium"
          android:inputType=""
          android:outlineSpotShadowColor="#FF9800"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          tools:layout_editor_absoluteY="59dp"
          tools:ignore="MissingConstraints" />

      <EditText
          android:layout_width="0dp"
          android:layout_height="57dp"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:background="@drawable/edittextshape"
          android:elevation="5dp"
          android:fontFamily="sans-serif-condensed-medium"
          android:hint="Enter Food Price"
          android:inputType=""
          android:outlineSpotShadowColor="#FF9800"
          android:paddingLeft="15dp"
          android:textSize="20sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          tools:ignore="MissingConstraints"
          tools:layout_editor_absoluteY="133dp" />

      <TextView
          android:layout_width="395dp"
          android:layout_height="56dp"
          android:drawableRight="@drawable/pluse_round"
          android:fontFamily="sans-serif-condensed-medium"
          android:gravity="center_vertical"
          android:paddingLeft="15dp"
          android:paddingRight="15dp"
          android:text="Select Image"
          android:textColor="@color/black"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          tools:ignore="MissingConstraints"
          tools:layout_editor_absoluteY="214dp" />

      <ImageView
          android:layout_width="175dp"
          android:layout_height="110dp"
          android:scaleType="fitCenter"
          android:src="@drawable/addimage"
          tools:layout_editor_absoluteX="104dp"
          tools:layout_editor_absoluteY="282dp"
          tools:ignore="MissingConstraints" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="47dp"
          android:background="@drawable/edittextshape"
          android:fontFamily="sans-serif-condensed-medium"
          android:text="Short Description"
          android:textColor="@color/black"
          android:layout_marginEnd="8dp"
          android:gravity="center_vertical"
          android:paddingLeft="15dp"
          android:layout_marginStart="8dp"
          tools:layout_editor_absoluteX="0dp"
          tools:layout_editor_absoluteY="410dp"
          tools:ignore="MissingConstraints" />

      <EditText
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:fontFamily="sans-serif-condensed-medium"
          android:text="bhbbjknmlml"
          android:textColor="@color/black"
          tools:ignore="MissingConstraints"
          tools:layout_editor_absoluteX="8dp"
          tools:layout_editor_absoluteY="468dp" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="47dp"
          android:background="@drawable/edittextshape"
          android:fontFamily="sans-serif-condensed-medium"
          android:gravity="center_vertical"
          android:paddingLeft="15dp"
          android:text="Short Description"
          android:textColor="@color/black"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="8dp"
          android:layout_marginStart="8dp"
          tools:ignore="MissingConstraints"
          tools:layout_editor_absoluteX="44dp"
          tools:layout_editor_absoluteY="503dp" />

      <EditText
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:text="Noddle Salad\nBurger Herbal\nPan Cake"
          android:layout_marginTop="8dp"
          android:background="@color/white"
          android:fontFamily="sans-serif-condensed-medium"
          tools:layout_editor_absoluteX="8dp"
          tools:layout_editor_absoluteY="559dp"
          tools:ignore="MissingConstraints" />

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/AddItmeButton"
          android:layout_width="157dp"
          android:layout_height="57dp"
          android:background="@drawable/greenbuttonshape"
          android:fontFamily="sans-serif-condensed-medium"
          android:text="Add Item"
          android:textAllCaps="false"
          android:textColor="@color/white"
          android:textSize="20sp"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="32dp"
          tools:layout_editor_absoluteX="122dp"
          tools:layout_editor_absoluteY="654dp"
          tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
